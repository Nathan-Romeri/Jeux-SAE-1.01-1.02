<Window
    x:Class="Jeux_SAE_1._01_1._02.ChoixNiveau"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Jeux_SAE_1._01_1._02"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ChoixNiveau"
    Width="1920"
    Height="1080"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <Rectangle
            Width="1920"
            Height="1080"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Stroke="Black">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Fond_ecran_flouter.png" />
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle
            x:Name="Rectangle_FondDifficulté"
            Width="1500"
            Height="750"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Fill="#FF000661"
            Stroke="Black"
            StrokeThickness="25">
            <Rectangle.OpacityMask>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="Black" />
                    <GradientStop Offset="1" Color="#D8FF0000" />
                </LinearGradientBrush>
            </Rectangle.OpacityMask>
        </Rectangle>
        <Label
            Width="1360"
            Height="202"
            Margin="0,209,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            BorderBrush="White"
            Content="CHOISIR LA DIFFICULTÉ"
            FontFamily="Copperplate Gothic Bold"
            FontSize="100"
            RenderTransformOrigin="0.733,0.526">
            <Label.Foreground>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="Black" />
                    <GradientStop Offset="1" Color="#FFFFC700" />
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
        <Rectangle
            Width="269"
            Height="341"
            Margin="314,359,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Stroke="Black"
            StrokeThickness="10" TouchEnter="Rectangle_TouchEnter">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/naruto_PNG29.png" Stretch="UniformToFill" />
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle
            Width="268"
            Height="341"
            Margin="0,359,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Stroke="Black"
            StrokeThickness="10">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/23457-1-one-piece-luffy-transparent-background.png" Stretch="Uniform" />
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle
            Width="269"
            Height="341"
            Margin="1337,359,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Stroke="Black"
            StrokeThickness="10">
            <Rectangle.Fill>
                <ImageBrush
                    ImageSource="/Dragon-Ball-Goku-PNG-Image.png"
                    Stretch="UniformToFill"
                    TileMode="None" />
            </Rectangle.Fill>
        </Rectangle>
        <Label
            x:Name="Difficulté_facile"
            Width="295"
            Height="86"
            Margin="301,732,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="APPRENTI"
            FontFamily="Algerian"
            FontSize="60"
            Foreground="White" />
        <Label
            x:Name="Difficulté_moyen"
            Width="300"
            Height="86"
            Margin="0,732,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="AMATEUR"
            FontFamily="Algerian"
            FontSize="60"
            Foreground="White"
            RenderTransformOrigin="0.493,0.699" />
        <Label
            x:Name="Difficulté_difficile"
            Width="120"
            Height="86"
            Margin="1412,732,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="PRO"
            FontFamily="Algerian"
            FontSize="60"
            Foreground="White"
            RenderTransformOrigin="0.493,0.699" />
    </Grid>
</Window>
