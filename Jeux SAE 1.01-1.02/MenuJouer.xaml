<Window
    x:Class="Jeux_SAE_1._01_1._02.MenuJouer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Jeux_SAE_1._01_1._02"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MenuJouer"
    Width="1920"
    Height="1080"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <Rectangle
            x:Name="rectangle_image"
            Margin="0,0,0,0"
            Stroke="Black">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/wallpapersden.com_jump-force-2019_1920x1080.jpg" />
            </Rectangle.Fill>
        </Rectangle>
        <Button
            x:Name="Button_Jouer"
            Margin="78,435,1554,532"
            Click="Button_Jouer_Click"
            Content="Jouer" FontSize="48" FontFamily="Rockwell Extra Bold" />
        <Image
            Margin="0,0,1187,788"
            Source="/Manga-Quest-10-01-2024.png"
            Stretch="Fill" />
        <Button
            x:Name="button_Annuler"
            Margin="78,577,1554,371"
            Click="button_Annuler_Click"
            Content="Quitter" FontSize="48" FontFamily="Gill Sans Ultra Bold" />

    </Grid>
</Window>
